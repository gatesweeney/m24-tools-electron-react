{
  "name": "m24-tools",
  "productName": "M24 Tools",
  "version": "1.1.0",
  "private": true,
  "homepage": ".",
  "main": "electron/main.js",
  "engines": {
    "node": ">=24 <25"
  },
  "scripts": {
    "start": "npm run dev",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "electron-start": "electron .",
    "dev": "concurrently \"npm run react-start\" \"npm run electron-start\"",
    "dist:mac": "npm run react-build && electron-builder --mac"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.15",
    "@mui/material": "^5.18.0",
    "@mui/x-data-grid-pro": "^6.19.8",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^16.4.5",
    "electron-updater": "^6.3.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "asar": "^3.2.0",
    "concurrently": "^9.0.1",
    "electron": "^34.0.0",
    "electron-builder": "^26.4.0",
    "react-scripts": "5.0.1"
  },
  "build": {
    "appId": "com.m24.tools",
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "asar": {
      "smartUnpack": true
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "indexer/**/*",
      "src/assets/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "electron/**",
      "indexer/**",
      "node_modules/better-sqlite3/**",
      "node_modules/bindings/**",
      "node_modules/file-uri-to-path/**"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "src/assets/webclip.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "gatesweeney",
        "repo": "m24-tools-electron-react"
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
